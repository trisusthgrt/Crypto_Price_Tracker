PORT=5000
MONGODB_URI=mongodb://127.0.0.1:27017/crypto-tracker
# Optional. If your URI doesn't include a "/dbName", Mongo will otherwise default to "test".
# Avoid spaces; prefer something like "crypto-tracker".
MONGODB_DB_NAME=crypto-tracker

# Upstream crypto API config
UPSTREAM_PROVIDER=coingecko
COINGECKO_API_BASE=https://api.coingecko.com/api/v3
UPSTREAM_TIMEOUT_MS=10000
CACHE_MAX_AGE_SECONDS=30
POLL_ENABLED=true
POLL_INTERVAL_SECONDS=20

# Hardening (recommended for production)
# Set to your frontend origin(s), comma-separated. Example: http://localhost:5173
CORS_ORIGINS=http://localhost:5173
LOG_REQUESTS=true
RATE_LIMIT_ENABLED=false
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=300

# Retention + storage controls
PRICE_POINT_RETENTION_DAYS=7
# Store one history point per bucket (e.g. 60s). Reduces DB size.
PRICE_POINT_BUCKET_SECONDS=60
PRICE_POINT_CLEANUP_ENABLED=true

# Use CoinGecko "ids" (not symbols). Example: bitcoin, ethereum, solana
COIN_WATCHLIST=bitcoin,ethereum
VS_CURRENCY=usd
